extends layout

block content
  script(src='/javascripts/nav.js')
  h1 Looking #{params.direction} from #{params.x},#{params.x}
  script.
    var forward = '#{nav.forward}';
    var left = '#{nav.left}';
    var right = '#{nav.right}';
    var backward = '#{nav.backward}';
  pre #{textview}

  div <b>w:</b> forward
  div <b>a:</b> left
  div <b>d:</b> right
  div <b>s:</b> backward
